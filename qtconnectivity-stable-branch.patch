+        hr = device3->GetGattServicesAsync(&deviceServicesOp);
+        EMIT_WORKER_ERROR_AND_QUIT_IF_FAILED_2(hr, "Could not obtain services");
+        ComPtr<IGattDeviceServicesResult> deviceServicesResult;
